<div class="container  mx-auto md:py-40 py-20">
	<div class="md:w-6/12  w-11/12 mx-auto text-center">
		<h6 class="title_awards">{{ section.settings.title }}</h6>
		<p class="desc_awards pb-10">{{ section.settings.desc }}</p>
	</div>
	<div class="md:w-8/12 w-11/12 flex mx-auto justify-between md:pt-20 pt-0">

		{%  for block in section.blocks %}
			<div>
				{% render 'lazy-images', image: block.settings.image, class: 'w-full ' %}
			</div>
		{% endfor %}
	</div>
</div>

{% schema %}
{
    "name": "Awards Section",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Multicolumn",
        "label": "International design awards"
      },
			{
        "type": "text",
        "id": "desc",
        "label": "Description",
				"default": "Make your life easier with the N1e electric kick scooter. Same styling as the N1, but with new standard features."
      }

    ],
    "blocks": [
      {
        "type": "column",
        "name": "t:sections.multicolumn.blocks.column.name",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Upload Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Awards Sections",
        "blocks": [
          {
            "type": "column"
          },
          {
            "type": "column"
          },
          {
            "type": "column"
          }
        ]
      }
    ]
  }
{% endschema %}

