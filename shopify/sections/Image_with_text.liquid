<div class="w-full flex">
	{%- for block in section.blocks -%}
	<div class="w-3/4 flex  {% if block.settings.boxposition == 'top' %} flex-col {% endif %} {% if block.settings.boxposition == 'bottom' %} flex-col-reverse	 {% endif %}">
		<div>
			{% render 'lazy-images', image: block.settings.image, class: 'w-full h-full ' %}
		</div>
		<div class="box_text text-center">
			<p>Customize wheel color</p>
			<p>Duis sem ante, hendrerit non malesuada ultrices, ultrices eu eros.</p>
		</div>
	</div>
	{% endfor %}
</div>

{% schema %}
{
    "name": "Block Image Text",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Multicolumn",
        "label": "t:sections.multicolumn.settings.title.label"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "t:sections.multicolumn.blocks.column.name",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Upload Image"
          },
					{
						"type": "select",
						"id": "boxposition",
						"options": [
							{
								"value": "top",
								"label": "Change on top"
							},
							{
								"value": "bottom",
								"label": "Change on bottom"
							}
						],
						"label": "Change box position of image and text"
					}
        ]
      }
    ],
    "presets": [
      {
        "name": "Block Image Text",
        "blocks": [
          {
            "type": "column"
          },
          {
            "type": "column"
          }
        ]
      }
    ]
  }
{% endschema %}