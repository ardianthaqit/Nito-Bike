<div class="bike_wrapper py-20" >
	<div class="w-full md:flex  block  {% if section.settings.direction == "right" %} flex-row {% endif %} {% if section.settings.direction == "left" %} flex-row-reverse {% endif %}">
		<div class="lg:w-1/2 w-full">
			<div class=" {% if section.settings.direction == "right" %} flex justify-end items-center m-auto lg:w-8/12 w-11/12{% endif %} {% if section.settings.direction == "left" %} 
			flex justify-end items-center m-auto lg:w-8/12 w-11/12  test {% endif %}">
				{% render 'lazy-images', image: section.settings.image, class: 'w-full h-3/4 object-contain flex justify-end' %}
			</div>
		</div>
		<div class="lg:w-1/2 w-full">
			<div class="{% if section.settings.direction == "right" %} flex flex-col justify-center h-full lg:w-9/12 w-11/12 mx-auto  {% endif %} {% if section.settings.direction == "left" %} flex flex-col justify-center h-full m-auto lg:w-8/12 w-11/12 test2 {% endif %}">
				<h1 class="title_bike">{{ section.settings.title_bike }}</h1>
				<div class="desc_bike">{{ section.settings.desc_bike }}</div>
				<div class="flex lg:flex-nowrap flex-wrap justify-between py-20">
					{%  for block in section.blocks %}
					<div class="block lg:w-auto w-1/2">
						<span class="mini_info">{{ block.settings.miniinfo}}</span>
						<p class="info_bike">{{ block.settings.infobike}}</p>
					</div>
					{% endfor %}
				</div>
				<div class="flex gap-4 items-center">
			 {% if section.settings.buyurl  != blank %}	<a class="filledbutton flex items-center gap-4" href="{{ section.settings.buyurl }}">{{ section.settings.lebalbuyurl }} {% include 'arrow_btn_light.liquid', class: 'w-10px h-10px'%}</a>	{% endif %}
			 {% if section.settings.detailurl != blank %}		<a class="unfilled" href="{{ section.settings.detailurl }}"> {{ section.settings.labeldetailurl }}</a> 	{% endif %}
				</div>
			</div>
		</div>
	</div>
</div>
{% schema %}
{
  "name": "Bike Section",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title_bike",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "desc_bike",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "buyurl",
      "label": "Buy Button Url"
    },
    {
      "type": "text",
      "id": "lebalbuyurl",
      "label": "Label BuyButton Url"
    },
    {
      "type": "url",
      "id": "detailurl",
      "label": "Detail Button Url"
    },
    {
      "type": "text",
      "id": "labeldetailurl",
      "label": "Label Detail Button Url"
    },
    {
      "type": "select",
      "id": "direction",
      "options": [
        {
          "value": "left",
          "label": "Change on left"
        },
        {
          "value": "right",
          "label": "Change on right"
        }
      ],
      "label": "Change direction of image and text"
    },
    {
      "type": "richtext",
      "id": "short-description",
      "label": "Short description",
      "default": "<p>Lorem ipsum dolor sit amet...</p>"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Block",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "miniinfo",
          "label": "small Info Text"
        },
        {
          "type": "text",
          "id": "infobike",
          "label": "Info Bike"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bike Section"
    }
  ]
}
  {% endschema %}