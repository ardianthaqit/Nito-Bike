<div class=" md:w-1/2 w-11/12 mx-auto md:py-40 py-20">
	<div class="grid md:grid-cols-3 grid-cols-2">
		{%  for block in section.blocks %}
		<div class="flex flex-col items-center justify-between p-10">
			{% render 'lazy-images', image: block.settings.image %}
			<div class="title_icon">{{ block.settings.title }}</div>
		</div>
		{% endfor %}
	</div>
</div>
{% schema %}
{
    "name": "Icons on Detail Page",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Multicolumn",
        "label": "t:sections.multicolumn.settings.title.label"
      },
			{
        "type": "color",
        "id": "bgcolor",
        "label": "Background Color"
      }

    ],
    "blocks": [
      {
        "type": "column",
        "name": "t:sections.multicolumn.blocks.column.name",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Upload Image"
          },
					{
						"type" : "text",
						"id":"title",
						"label": "Title Icon"
					}
        ]
      }
    ],
    "presets": [
      {
        "name": "Icons on Detail Page",
        "blocks": [
          {
            "type": "column"
          },
          {
            "type": "column"
          },
          {
            "type": "column"
          }
        ]
      }
    ]
  }
{% endschema %}