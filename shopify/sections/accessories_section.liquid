<div class="w-full flex items-center py-20 md:flex-nowrap flex-wrap flex-col md:flex-row" style="background-color:{{ section.settings.bgcolor }} ;">
	<div class="md:w-1/4 w-full flex md:justify-end justify-start md:pl-0 pl-8">
		<div class="w-3/4 flex flex-col  items-baseline pr-4">
		{% if section.settings.heading != blank %}	<p class="title_accessories">{{ section.settings.heading }}</p> {% endif %}
		{% if section.settings.heading != blank %}	<p class="desc_accessories">{{ section.settings.description }}</p>  {% endif %}
			<a class="flex items-center gap-4 btn_accessories" href="{{ section.settings.btnurl }}">{{ section.settings.btnlabel }} {% include 'arrow_right.liquid'%}</a>
		</div>
	</div>
	<div class="swiper mySwiper-accessories md:pt-0 pt-40">
		<div class="md:w-3/4  w-full flex md:gap-x-6 gap-x-0 swiper-wrapper">
			{%  for block in section.blocks %} 
				<div class="w-2/6 relative swiper-slide">
					{% render 'lazy-images', image: block.settings.image, class: 'md:w-full w-11/12 h-full rounded-2xl mx-auto' %}
					<p class="titleover_image">{{ block.settings.text }}</p>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
{% schema %}
{
"name": "Accessories Section",
"tag": "section",
"class": "spaced-section spaced-section--full-width",
"settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
    },
		{
			"type": "text",
			"id": "description",
			"label": "Description",
			"default": "Lorem Ipsum"
	},
	{
		"type": "url",
		"id": "btn",
		"label": "Button Url"
},
{
	"type": "text",
	"id": "btnlabel",
	"label": "Button Label"
},
		{
			"type": "color",
			"id": "bgcolor",
			"label": "Background Color"
	}
],
"blocks": [
  {
    "type": "text",
    "name": "Block",
    "limit": 10,
    "settings": [
      {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
      }
			, {
				"type": "text",
				"id": "text",
				"label": "Text"
		}
    ]
  }
],
"presets": [
  {
    "name": "Accessories Section"
  }
]
}
{% endschema %}
