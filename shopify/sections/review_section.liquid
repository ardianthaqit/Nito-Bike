<div class="review-section pb-20" style="background-color: {{ section.settings.bgcolor }};">
  <div class="page-width  ">
    <div class="text-center title-review-section max-w-6xl mx-auto py-20">{{ section.settings.heading}}</div>
    <div class="swiper mySwiper-review">
      <div class=" flex  swiper-wrapper">
        {%  for block in section.blocks %}
        <div class="e w-1/4 wrapper_review swiper-slide">
          <div class="block review-block p-10">
            <div class="review-start">
              {{block.settings.svg_code}}
            </div>
            <div class="review-name">
              {{block.settings.name}}
            </div>
            <div class="review-position">
              {{block.settings.position}}
            </div>
            <div class="review-desc">
              {{block.settings.description}}
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>


{% schema %}
{
"name": "Review Section",
"tag": "section",
"class": "spaced-section spaced-section--full-width",
"settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
    },
		{
			"type": "color",
			"id": "bgcolor",
			"label": "Background Color"
	}
],
"blocks": [
  {
    "type": "text",
    "name": "Block",
    "limit": 10,
    "settings": [
      {
          "type": "html",
          "id": "svg_code",
          "label": "SVG Code"
      },
      {
        "type": "text",
        "id": "name",
        "label": "Name"
      },
      {
        "type": "richtext",
        "id": "position",
        "label": "Position"
      },
      {
          "type": "richtext",
          "id": "description",
          "label": "Description Review"
      }
    ]
  }
],
"presets": [
  {
    "name": "Review Section"
  }
]
}
{% endschema %}
