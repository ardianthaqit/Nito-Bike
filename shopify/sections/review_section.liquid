{% schema %}
{
"name": "Review Section",
"tag": "section",
"class": "spaced-section spaced-section--full-width",
"settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Heading"
    },
		{
			"type": "color",
			"id": "bgcolor",
			"label": "Background Color"
	}
],
"blocks": [
  {
    "type": "text",
    "name": "Block",
    "limit": 10,
    "settings": [
      {
          "type": "html",
          "id": "svg_code",
          "label": "SVG Code"
      },
      {
        "type": "text",
        "id": "name",
        "label": "Name"
      },
      {
        "type": "richtext",
        "id": "position",
        "label": "Position"
      },
      {
          "type": "richtext",
          "id": "description",
          "label": "Description Review"
      }
    ]
  }
],
"presets": [
  {
    "name": "Review Section"
  }
]
}
{% endschema %}
