<div class="p-10 flex justify-between ">
    {%- for block in section.blocks -%}
     <div class=" ">
				{% render 'lazy-images', image: block.settings.image, class: 'w-full h-full rounded-2xl' %}
    </div>
    {% endfor %}
</div>

{% schema %}
{
    "name": "4 Columns Image",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "Multicolumn",
        "label": "t:sections.multicolumn.settings.title.label"
      },
      {
        "type": "text",
        "id": "heading_size",
        "label" : "test" 
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "t:sections.multicolumn.blocks.column.name",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Upload Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "4 Columns Image",
        "blocks": [
          {
            "type": "column"
          },
          {
            "type": "column"
          },
          {
            "type": "column"
          }
        ]
      }
    ]
  }
{% endschema %}